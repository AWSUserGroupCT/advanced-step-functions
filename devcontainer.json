{
    "name": "AWS SAM & CloudFormation Development",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "settings": { 
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "amazonwebservices.aws-toolkit-vscode",
                "github.copilot",
                "github.copilot-chat"
            ]
        }
    },
    "postCreateCommand": "bash .devcontainer/post-create.sh",
    "remoteUser": "vscode"
}
